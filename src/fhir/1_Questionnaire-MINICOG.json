          }
        }
      ],
      "linkId": "minicog-total-score",
      "text": "Total Score (0 - 5 points)",
      "type": "decimal",
      "required": false
    },
    {
      "linkId": "minicog-total-score-explanation",
      "type": "display",
      "extension": [
        {
          "url": "http://hl7.org/fhir/uv/sdc/StructureDefinition/sdc-questionnaire-enableWhenExpression",
          "valueExpression": {
